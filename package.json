{
	"name": "list-maker-api",
	"version": "1.0.0",
	"description": "List Maker API",
	"main": "server.js",
	"scripts": {
		"setup": "npm install && npx husky install",
		"lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
		"fix": "npm run lint -- --fix",
		"format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
		"build": "tsc",
		"dev": "ts-node-dev --respawn ./src/server.ts",
		"start": "node --unhandled-rejections=strict ./dist/server.js",
		"test": "mocha -r ts-node/register 'test/**/*.test.ts' --unhandled-rejections=strict",
		"ts-coverage": "typescript-coverage-report"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mittell/list-maker-api.git"
	},
	"author": "Chris Mittell",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/mittell/list-maker-api/issues"
	},
	"homepage": "https://github.com/mittell/list-maker-api#readme",
	"devDependencies": {
		"@commitlint/cli": "^16.2.3",
		"@commitlint/config-conventional": "^16.2.1",
		"@typegoose/typegoose": "^9.8.1",
		"@types/body-parser": "^1.19.2",
		"@types/chai": "^4.3.1",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.8",
		"@types/mocha": "^9.1.1",
		"@types/node": "^17.0.25",
		"@types/shortid": "^0.0.29",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.20.0",
		"@typescript-eslint/parser": "^5.20.0",
		"chai": "^4.3.6",
		"eslint": "^8.13.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-mocha": "^10.0.4",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"mocha": "^10.0.0",
		"prettier": "^2.6.2",
		"supertest": "^6.2.3",
		"ts-node": "^10.7.0",
		"ts-node-dev": "^1.1.8",
		"typescript": "^4.6.3",
		"typescript-coverage-report": "^0.6.4"
	},
	"dependencies": {
		"@sentry/node": "^6.19.6",
		"@sentry/tracing": "^6.19.6",
		"argon2": "^0.28.5",
		"body-parser": "^1.20.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"express-validator": "^6.14.0",
		"helmet": "^5.0.2",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.3.1",
		"shortid": "^2.2.16"
	}
}
